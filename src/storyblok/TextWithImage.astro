---
import { storyblokEditable } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} >
  <div class="relative bg-white">
    <div class="relative h-80 overflow-hidden bg-white md:absolute md:left-0 md:h-full md:w-1/3 lg:w-1/2">
      <img
        class="h-full w-full object-contain"
        src={blok.imageUrl}
        alt=""
      />
    </div>
    <div class="relative mx-auto max-w-7xl py-24 sm:py-32 lg:py-40 lg:px-8">
      <div class="pr-6 pl-6 md:ml-auto md:w-2/3 md:pl-16 lg:w-1/2 lg:pl-24 lg:pr-0 xl:pl-32">
        <h2 class="text-base font-semibold leading-7 text-black">{blok.subtitle}</h2>
        <p class="mt-2 text-3xl font-bold tracking-tight text-black sm:text-4xl">{blok.title}</p>
        <p class="mt-6 text-base leading-7 text-black">
          {blok.content}
        </p>
        <div class="mt-8">
          {blok.buttons.map((button : any) => <StoryblokComponent blok={button}/>)}
        </div>
      </div>
    </div>
  </div>
</div>